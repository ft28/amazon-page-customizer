{
  "name": "Amazon Page Customizer",
  "description": "Amazonを使っていて、追加でほしい機能を実装したものです。",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "16": "./images/icon_16x16.png",
    "48": "./images/icon_48x48.png"
  },
  "action": {
    "default_title": "amazon page customizer",
    "default_icon": "./images/icon_48x48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/*"
      ],
      "js": [
        "./js/config.js",
        "./js/insertOtherSiteUrls.js",
        "./js/insertUsedPriceToWishList.js",
        "./js/main.js"
      ]
    }
  ]
}